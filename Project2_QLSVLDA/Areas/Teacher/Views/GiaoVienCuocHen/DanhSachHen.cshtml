
@{
    ViewBag.Title = "DanhSachHen";
    Layout = "~/Areas/Teacher/Views/Shared/_Layout.cshtml";
}

@{

    var db = new Project2_QLSVLDA.Models.QL_PROJECTEntities();

    string ses_gv = Session["user"].ToString();

    var cuochen_allsystem = (from ch in db.CUOCHENs
                             join gv in db.GIANGVIENs on ch.magiaovien equals gv.magv
                             join svch in db.SINHVIENCUOCHENs on ch.macuochen equals svch.macuochen
                             join sv in db.SINHVIENs on svch.masinhvien equals sv.massv
                             select new
                             {
                                 sv.ten,
                                 ch.macuochen,
                                 ch.magiaovien,
                                 ch.thoigianbatdau,
                                 ch.thoigianketthuc,
                                 ch.diadiem,
                                 svch.thoigiandat,
                                 ch.ghichu,
                                 svch.masinhvien,
                                 svch.manhom,
                                 svch.malop

                             }).ToList();


    var list_cuoc_hen = cuochen_allsystem.Where(p => p.magiaovien.ToString().Trim() == ses_gv).ToList();




}





<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">

                    <li class="breadcrumb-item"><a href="@Url.Action("Index","GiaoVienHome")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","GiaoVienCuocHen")">Tạo lịch hẹn</a></li>
                    <li class="breadcrumb-item">Danh sách cuộc hẹn</li>

                    @*<li class="breadcrumb-item active">Danh sách lớp</li>*@
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<div class="row">
    <div class="col-12">

        <!-- /.card -->

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Danh sách cuộc hẹn hiện có</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Mã cuộc hẹn</th>
                            <th>Ngày</th>
                            <th>Bắt đầu</th>
                            <th>Kết thúc</th>
                            <th>Địa điểm</th>
                            <th>Sinh viên</th>
                            <th>Nhóm</th>
                            <th>Lớp</th>
                            <th>Đánh giá</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in list_cuoc_hen)
                        {
                            <tr class="data-row">
                                <td>
                                    @item.macuochen
                                </td>
                                <td>
                                    @item.thoigianbatdau.Value.ToString("yyyy/MM/dd")
                                </td>
                                <td>
                                    @item.thoigianbatdau.Value.ToString("HH:mm")
                                </td>
                                <td>
                                    @item.thoigianketthuc.Value.ToString("HH:mm")
                                </td>
                                <td>
                                    @item.diadiem
                                </td>
                                <td>
                                    @item.ten
                                </td>
                                <td>
                                    @item.manhom
                                </td>

                                <td>
                                    @item.malop
                                </td>

                                <td>
                                    @item.ghichu
                                </td>
                            </tr>

                        }
                    </tbody>
                    
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.row -->

<br>
<br>
<div class="row">
    <div class="col-5 offset-md-7">

        <!-- /.card -->

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Đánh giá cuộc hẹn</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">

                <form method="post" action="/GiaoVienCuocHen/ActionName_Nhanxet" onsubmit="return validateForm()">

                    <div class="form-group">
                        <label for="id_meeting">Mã cuộc hẹn</label>
                        <div>
                            <input type="text" name="id_meeting" id="id_meeting" class="form-group  form-control" />
                        </div>


                    </div>

                    <div class="form-group">
                        <label for="gv_comment">Nội dung bài tập</label>
                        <div>
                            <textarea name="gv_comment" rows="4" id="gv_comment" class="form-group form-control"></textarea>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </form>

            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>
<!-- /.content -->



