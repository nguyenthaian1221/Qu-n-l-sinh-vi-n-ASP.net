
@{
    ViewBag.Title = "DanhSachBaiTapDaTao";
}

@{
    var db = new Project2_QLSVLDA.Models.QL_PROJECTEntities();

    var ss = Session["user"].ToString();

    var list_bt_lop = (from bt in db.BAITAPs select bt).ToList();

}


@{

    // code xử lý dữ liệu đã được hiển thị lên bảng

    string malop_pass;

}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">

                    <li class="breadcrumb-item"><a href="@Url.Action("Index","GiaoVienHome")">Trang chủ</a></li>
                    <li class="breadcrumb-item"><a href="@Url.Action("Index","GiaoVienBaiTap")">Tạo bài tập</a></li>
                    <li class="breadcrumb-item">Danh sách bài tập đã tạo</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<div class="row">
    <div class="col-12">

        <!-- /.card -->

        <div class="card card-primary">
            <div class="card-header">
                <h3 class="card-title">Danh sách bài tập đã tạo </h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Mã lớp</th>
                            <th>Nhóm</th>
                            <th>Bắt đầu</th>
                            <th>Kết thúc</th>
                            <th>Nội dung</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in list_bt_lop)
                        {
                            <tr class="data-row">
                                <td>
                                    @item.mabaitap
                                </td>
                                <td>
                                    @item.malop
                                </td>
                                <td>
                                    @item.manhom
                                </td>
                                <td>
                                    @item.ngaybatdau
                                </td>
                                <td>
                                    @item.ngayketthuc
                                </td>
                                <td>
                                    @item.noidung
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.col -->
</div>

