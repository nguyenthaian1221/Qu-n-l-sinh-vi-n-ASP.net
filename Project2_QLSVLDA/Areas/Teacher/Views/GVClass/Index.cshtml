@model List<Project2_QLSVLDA.Models.LOPMONHOC>


@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Teacher/Views/Shared/_layout.cshtml";

}




<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1></h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">

                    <li class="breadcrumb-item"><a href="@Url.Action("Index","GiaoVienHome")">Trang chủ</a></li>
                    <li class="breadcrumb-item active">Danh sách lớp</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<section class="content">
    <div class="container-fluid">
        <!-- Small boxes (Stat box) -->
        <div class="row">

            @foreach (var item in Model)
            {

                <div class="col-sm-2">
                    <a href="@Url.Action("Detail", new {id = item.malop.Trim()})" class="card text-center">


                        @{ 
                            var str = item.mamonhoc.Trim();
                        }

                        @if (str == "IT3910Q")
                        {
                            <img src="~/Content/Custom/Img/img-pro-1.png" alt="Ảnh">
                        }
                        else if (str == "IT3920Q")
                        {
                            <img src="~/Content/Custom/Img/img-pro-2.png" alt="Ảnh">
                        }
                        else if (str == "IT3930Q")
                        {
                            <img src="~/Content/Custom/Img/img-pro-3.png" alt="Ảnh">
                        }
                        else if (str == "IT5315Q")
                        {
                            <img src="~/Content/Custom/Img/img-DATN.png" alt="Ảnh">
                        }



                        <div class="card-body">
                            <p class="card-text">Mã lớp: <span>@item.malop</span></p>
                        </div>

                    </a>
                </div>

            }

        </div>
    </div>
</section>